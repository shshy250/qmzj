.page {
  background: #f2f2f2;
  width: 100%;
}
/* 上面 start */
.top {
  background-position: 55% 50%;
  background-image: url(../../image/top_background.png) ;
  background-size: 200rpx 200rpx;
  background-repeat:no-repeat;
  width: calc(100%-60rpx);
  height: 240rpx;
  background-color: #fff;
  padding: 20rpx 35rpx;
}

.top-up {
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
}

.top-left {
  margin-top: 40rpx;
}

.balance {
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #737373;
}

.top-right {
  width: 120rpx;
  height: 120rpx;
  border-radius: 100rpx;
  overflow: hidden;
}

.top-right image {
  width: 100%;
  height: 100%;
}

.top-down {
  text-align: center;
  margin-top: 20rpx;
  padding: 0 120rpx;
  display: flex;
  justify-content: space-between;
}

.equipmentNum,.totalNum,.rzseType {
  font-size: 25rpx;
  color: #737373;
}

/*收货地址*/
.toAddress {
  height: 40rpx;
  color: #737373;
  padding: 10rpx 20rpx;
  background-color: #fff;
  font-size: 25rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  line-height: 40rpx;
}

.toAddressIcon {
  margin: auto 0;
}


/* 中间 start */
.middle {
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
  background-color: #fff;
  font-size: 25rpx;
  color: #737373;
}

.control-m-Img {
  width: 90rpx;
  height: 90rpx;
  margin: 0 auto;
}

.control-m-Img image{
  width: 100%;
  height: 100%;
}

.middle-up {
  width: 100%;
  height: 50%;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e6e6e6;
}

.orderAll, .waitCollection, .waitSend {
  border-right: 1rpx solid #e6e6e6;
}

.orderAll, .waitCollection, .waitSend, .waitReceive {
  width: 50%;
  height: 100%;
  text-align: center;
  padding-top: 10rpx;
}

.middle-down {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 50%;
}

.using, .successed, .overdue {
  border-right: 1rpx solid #e6e6e6;
}

.using, .successed, .overdue, .returnGoods {
  width: 50%;
  height: 100%;
  text-align: center;
  padding-top: 5rpx;
}

/*物流信息*/
.me-step {
  margin-top: 20rpx;
  width: calc(100% - 40rpx);
  padding: 10rpx 20rpx;
  background-color: #fff;
  font-size: 27rpx;
}

.step-top {
  display: flex;
  justify-content: space-between;
}

.step-top-time {
  color: #737373;
}

.step-content {
  display: flex;
  margin-top: 20rpx;
}

.step-content image {
  width: 80rpx;
  height: 80rpx;
}

.step-content-right {
  height: 80rpx;
  margin-left: 10rpx;
}

.step-content-top {
  color: rgb(16, 142, 233);
  height: 35rpx;
  line-height: 35rpx;
}

.step-content-bottom {
  color: #737373;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  height: 35rpx;
  line-height: 35rpx;
  width: 550rpx;
}

/* 广告 */
.me-ad {
  margin-top: 20rpx;
  width: 100%;
  height: 150rpx;
}

.me-ad image {
  width: 100%;
  height: 100%;
}

/* 下面 start */
.bottom {
  text-align: center;
  padding: 40rpx 100rpx;
  margin-top: 20rpx;
  background-color: #fff;
  width: calc(100%-200rpx);
  font-size: 25rpx;
}

.control-b-Img {
  width: 90rpx;
  height: 90rpx;
  margin: 0 auto;
}

.control-b-Img image {
  width: 100%;
  height: 100%;
}

.bottom-up {
  height: 33%;
  display: flex;
  justify-content: space-between;
}

.bottom-middle {
  margin-top: 20rpx;
  height: 33%;
  display: flex;
  justify-content: space-between;
}

.bottom-bottom {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height: 33%;
  display: flex;
  justify-content: space-between;
}

/*客服弹窗*/
.modalService {
  border-radius: 20rpx;
  width: 400rpx;
}

.modal-service-title {
  font-size: 30rpx;
  line-height: 80rpx;
}

.modal-service-tel {
  font-size: 28rpx;
  line-height: 60rpx;
}

.color-blue {
  color: rgb(16, 142, 233);
}

.modal-service-time {
  font-size: 28rpx;
  line-height: 60rpx;
}

.close-btn {
  width: 180rpx;
  height: 50rpx;
  font-size: 28rpx;
  border-radius: 25rpx;
  border: 1rpx solid rgb(16, 142, 233);
  line-height: 50rpx;
  text-align: center;
  color: rgb(16, 142, 233);
  margin: 30rpx auto 50rpx auto;
}

